    <link rel="stylesheet" type="text/css" href="/css/util.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <!--===============================================================================================-->
    @section Script
    {
    <style>
        tbody{
        background-color : red
        }
    </style>
    }
</head>
<body dir="rtl" style="background-image: url('images/bg-01.jpg');background-repeat: no-repeat;background-size: cover;display: flex;align-items: center;justify-content: center;">

    <div class="container">
        <div class="card">
            <div class="card-header">
                لیست پیام ها
            </div>
            <div class="card-body">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>عنوان</th>
                            <th>نام و نام خانوادگی</th>
                            <th>پیام</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            @{
                                int i = 1;
                                foreach (var item in Model.listmessagemodel)
                                {
                                    <tr>
                                    <td>@i</td>
                                    <td>@item.Subject</td>
                                    <td>@item.FullName</td>
                                    <td>@item.MessageBody</td>
                                    </tr>
                                    i++;
                                }
                            }
                        
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--=========/======================================================================================-->
    <script src="/vendor/animsition/js/animsition.min.js"></script>
    <!--=========/======================================================================================-->
    <script src="/vendor/bootstrap/js/popper.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--=========/======================================================================================-->
